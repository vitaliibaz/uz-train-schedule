<ResultDetailsLabel@Label>:
	size_hint_y: None
	font_size: 30
	size: self.texture_size

<ResultDetailsWindow>:
	ScrollView:
		GridLayout:
			cols: 1
			size_hint: 1, None
			size: self.minimum_size

			ResultDetailsLabel:
				id: departure
				text_size: root.width, None

			ResultDetailsLabel:
				id: arrival
				text_size: root.width, None

			ResultDetailsLabel:
				id: total_time
				text_size: root.width, None

			ResultDetailsLabel:
				id: number_train_and_route
				text_size: root.width, None

			ResultDetailsLabel:
				id: periodicity_first_train
				text_size: root.width, None

			ResultDetailsLabel:
				id: via
				text_size: root.width, None

			ResultDetailsLabel:
				id: periodicity_second_train
				text_size: root.width, None

			ResultDetailsLabel:
				id: transfer
				text_size: root.width, None

