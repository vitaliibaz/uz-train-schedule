	font_size: 30
	size: self.texture_size

<ResultDetailsWindow>:
	ScrollView:
		GridLayout:
			cols: 1
			size_hint: 1, None
			size: self.minimum_size

			ResultDetailsLabel:
				id: departure

			ResultDetailsLabel:
				id: arrival

			ResultDetailsLabel:
				id: total_time

			ResultDetailsLabel:
				id: number_train_and_route

			ResultDetailsLabel:
				id: periodicity_first_train

			ResultDetailsLabel:
				id: via

			ResultDetailsLabel:
				id: periodicity_second_train

			ResultDetailsLabel:
				id: transfer

