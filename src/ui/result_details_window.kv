            ResultDetailsLabel:
                id: periodicity_first_train
                text_size: root.width, None

            ResultDetailsLabel:
                id: via
                text_size: root.width, None

            ResultDetailsLabel:
                id: periodicity_second_train
                text_size: root.width, None

            ResultDetailsLabel:
                id: transfer
                text_size: root.width, None

