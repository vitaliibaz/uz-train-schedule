[StationTemplate@SelectableView+BoxLayout]:
    size_hint_y: ctx.size_hint_y
    height: ctx.height
    ListItemButton:
        size_hint: 1, 1
        background_color: .7,.7,.7,1
        color: 0.9,0.9,0.9,1
        font_size: '20sp'
        text_size: self.size
        halign: 'center'
        valign: 'middle'
        shorten: True
        shorten_from: 'right'
        text: ctx.text
        on_release:
            ctx.window.selected_station = ctx.station
            ctx.manager.current = 'main_window'

