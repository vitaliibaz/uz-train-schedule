<Button>:
	font_size: 40
	color: 0,1,0,1
	size_hint: 0.6, 0.2

<MainWindow>:
	Button:
		id: departure
		text: "Departure Station"
		pos_hint: {'x': 0.2, 'y': 0.7}
		on_release:
			root.select_station_button_was_pressed = True
			root.manager.current = 'select_departure_station_window'

	Button:
		id: arrival
		text: "Arrival Station"
		pos_hint: {'x': 0.2, 'y': 0.4}
		on_release:
			root.select_station_button_was_pressed = True
			root.manager.current = 'select_arrival_station_window'

	Button:
		id: start_search
		text: "Start Search"
		color: 0,1,0,0.2
		pos_hint: {'x': 0.2, 'y': 0.1}
		disabled: False
		on_release: root.manager.current = 'list_all_results_window'

