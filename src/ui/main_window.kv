<MainWindowButton@Button>:
    font_size: '20sp'
    color: 0.9,0.9,0.9,1
    size_hint: 0.9, 0.2
    text_size: self.size
    halign: 'center'
    valign: 'middle'
    shorten: True
    shorten_from: 'right'

<MainWindow>:
    MainWindowButton:
        id: departure
        pos_hint: {'x': 0.05, 'y': 0.7}
        on_release:
            root.select_station_button_was_pressed = True
            root.manager.current = 'select_departure_station_window'

    MainWindowButton:
        id: arrival
        pos_hint: {'x': 0.05, 'y': 0.4}
        on_release:
            root.select_station_button_was_pressed = True
            root.manager.current = 'select_arrival_station_window'

    MainWindowButton:
        id: start_search
        pos_hint: {'x': 0.05, 'y': 0.1}
        disabled: True
        on_release: root.manager.current = 'list_all_results_window'

