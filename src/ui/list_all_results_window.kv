<MessageAboutRouteLabel@Label>:
    size_hint: 0.9, None
    font_size: '20sp'
    shorten: True
    shorten_from: 'right'
    text_size: self.size
    halign: 'left'
    valign: 'top'

<NoSearchResultsLabel@Label>:
    size_hint: 0.9, 1
    font_size: '20sp'
    text_size: self.size
    halign: 'left'
    valign: 'top'
    color: 1,0,0,1


[CustomListItem@SelectableView+BoxLayout]:
    size_hint_y: ctx.size_hint_y
    height: ctx.height
    ListItemButton:
        size_hint: 1, 1
        font_size: '20sp'
        text_size: self.size
        background_color: .7,.7,.7,1
        color: 0.9,0.9,0.9,1
        shorten: False
        halign: 'center'
        valign: 'middle'
        text: ctx.text
        on_release:
            ctx.window.selected_route = ctx.route
            ctx.manager.current = 'result_details_window'

